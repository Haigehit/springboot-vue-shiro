<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shiro.shirodemo.mapper.AttributeMapper">

	<!-- 通用查询映射结果 -->
	<resultMap id="BaseResultMap" type="com.shiro.shirodemo.entity.Attribute">
		<id column="id" property="id" />
		<result column="name" property="name" />
	</resultMap>
	
	<select id="findAttributesByPage" resultMap="BaseResultMap">
	SELECT
		attr.id,
		attr.`name`
	FROM
		sys_attribute AS attr
	WHERE (1=1)
	<if test="''!= dto.keyword">
	 AND attr.`name` LIKE CONCAT('%',#{dto.keyword},'%')
	</if>
	</select>

</mapper>
